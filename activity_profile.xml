<?xml version="1.0" encoding="UTF-8"?>

    <RelativeLayout
    android:background="@drawable/profilebkgs"
    tools:context=".MainActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">




    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@color/Aqua"
        android:backgroundTint="#1403A9F4"
        android:orientation="vertical">


    <LinearLayout
        android:layout_height="220dp"
        android:layout_width="match_parent"
        android:id="@+id/layout1"
        android:orientation="vertical"
        >
    <ImageView
        android:layout_height="90dp"
        android:layout_width="90dp"
        android:background="@drawable/zameerprofile"
        android:layout_marginTop="80dp"
        android:layout_gravity="center"
        android:id="@+id/imageView2" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Zameer Abbas"
            android:textSize="23dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="10dp"
            />


</LinearLayout>
        <LinearLayout
            android:layout_height="495dp"
            android:layout_width="match_parent"
            android:id="@+id/layout2"
            android:orientation="vertical"
            >

            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/btn_background_1"
                android:layout_height="60dp"
                android:layout_width="match_parent"
                android:id="@+id/button1"
                android:textStyle="bold"
                android:textSize="18sp"
                android:drawableEnd="@drawable/baseline_arrow_forward_ios_24"
                android:layout_marginTop="10dp"
                android:text="@string/app_language"
                android:textAlignment="viewStart"
                style="@android:style/Widget.Button"
                android:paddingStart="20dp"
                android:drawablePadding="20dp"
                android:drawableStart="@drawable/baseline_language_24"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="32dp"
                android:layout_marginStart="32dp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/btn_background_1"
                android:layout_height="60dp"
                android:layout_width="match_parent"
                android:id="@+id/button2"
                android:textStyle="bold"
                android:textSize="18sp"
                android:drawableEnd="@drawable/baseline_arrow_forward_ios_24"
                android:layout_marginTop="1dp"
                android:text="@string/review"
                android:textAlignment="viewStart"
                style="@android:style/Widget.Button"
                android:paddingStart="20dp"
                android:drawablePadding="20dp"
                android:drawableStart="@drawable/baseline_reviews_24"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="32dp"
                android:layout_marginStart="32dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/btn_background_1"
                android:layout_height="60dp"
                android:layout_width="match_parent"
                android:id="@+id/button3"
                android:textStyle="bold"
                android:textSize="18sp"
                android:drawableEnd="@drawable/baseline_arrow_forward_ios_24"
                android:layout_marginTop="1dp"
                android:text="@string/privacy_policys"
                android:textAlignment="viewStart"
                style="@android:style/Widget.Button"
                android:paddingStart="20dp"
                android:drawablePadding="20dp"
                android:drawableStart="@drawable/baseline_privacy_tip_24"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="32dp"
                android:layout_marginStart="32dp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/btn_background_1"
                android:layout_height="60dp"
                android:layout_width="match_parent"
                android:id="@+id/button4"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="1dp"
                android:drawableEnd="@drawable/baseline_arrow_forward_ios_24"
                android:text="@string/about_us"
                android:textAlignment="viewStart"
                style="@android:style/Widget.Button"
                android:paddingStart="20dp"
                android:drawablePadding="20dp"
                android:drawableStart="@drawable/baseline_warehouse_24"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="32dp"
                android:layout_marginStart="32dp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/btn_background_1"
                android:layout_height="60dp"
                android:layout_width="match_parent"
                android:id="@+id/button5"
                android:textStyle="bold"
                android:textSize="18sp"
                android:drawableEnd="@drawable/baseline_arrow_forward_ios_24"
                android:layout_marginTop="1dp"
                android:text="Contact Us"
                android:textAlignment="viewStart"
                style="@android:style/Widget.Button"
                android:paddingStart="20dp"
                android:drawablePadding="20dp"
                android:drawableStart="@drawable/baseline_settings_24"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="32dp"
                android:layout_marginStart="32dp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/btn_background_1"
                android:layout_height="60dp"
                android:layout_width="match_parent"
                android:id="@+id/button6"
                android:textStyle="bold"
                android:textSize="18sp"
                android:drawableEnd="@drawable/baseline_arrow_forward_ios_24"
                android:layout_marginTop="1dp"
                android:text="@string/setting"
                android:textAlignment="viewStart"
                style="@android:style/Widget.Button"
                android:paddingStart="20dp"
                android:drawablePadding="20dp"
                android:drawableStart="@drawable/baseline_settings_24"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="32dp"
                android:layout_marginStart="32dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/btn_background_1"
                android:layout_height="50dp"
                android:layout_width="match_parent"
                android:id="@+id/logoutprofile"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:text="Logout"
                android:textColor="@color/white"
                android:backgroundTint="@color/red"
                android:layout_gravity="center"
                android:gravity="center"
                android:drawableRight="@drawable/baseline_logout_24"
                android:paddingStart="20dp"
                android:layout_marginEnd="62dp"
                android:layout_marginStart="62dp"/>

        </LinearLayout>


</LinearLayout>



</RelativeLayout>